// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String           @id
  email            String           @unique
  name             String?
  image            String?
  api_usage_record ApiUsageRecord[]

  @@map("users")
}

model ApiUsageRecord {
  id        Int      @id @default(autoincrement())
  api_name  String
  called_at DateTime
  user      User     @relation(fields: [called_by], references: [id])
  called_by String

  @@map("api_usage_records")
}
